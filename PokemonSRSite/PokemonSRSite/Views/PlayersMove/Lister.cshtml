@model IEnumerable<PlayersMove>

<h2>PlayersMove</h2>

<p>
    <a href='@Url.Action("Ajouter", "PlayersMove")' style="text-decoration:none">
        <img src='@Url.Content("~/Images/UI/Add.png")'
             alt="Ajouter" class="CMD_Icon_3"
             data-toggle="tooltip"
             title="Ajouter un Move" />
    </a>
</p>

<table class="table">
    <tr>

        <th>
            <a href='@Url.Action("Sort", "PlayersMove",new {sortBy = "Username"})' style="text-decoration:none">
                <img src='@Url.Content("~/Images/UI/Sort.png")'
                     alt="Sort" class="CMD_Icon_4"
                     data-toggle="tooltip"
                     title="Trier par Nom" />
            </a>

            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            <a href='@Url.Action("Sort", "PlayersMove",new {sortBy = "PokemonName"})' style="text-decoration:none">
                <img src='@Url.Content("~/Images/UI/Sort.png")'
                     alt="Sort" class="CMD_Icon_4"
                     data-toggle="tooltip"
                     title="Trier par Type" />
            </a>
             
            @Html.DisplayNameFor(model => model.PokemonName)
        </th>
        <th>
            <a href='@Url.Action("Sort", "PlayersMove", new { sortBy = "MoveName" })' style="text-decoration:none">
                <img src='@Url.Content("~/Images/UI/Sort.png")'
                     alt="Sort" class="CMD_Icon_4"
                     data-toggle="tooltip"
                     title="Trier par Damage" />
            </a>

           @Html.DisplayNameFor(model => model.MoveName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PokemonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoveName)
            </td>

            <td>
                <a href='@Url.Action("Details", "PlayersMove", new { id = item.Id })' style="text-decoration:none">
                    <img src='@Url.Content("~/Images/UI/Details.png")'
                         alt="Détails" class="CMD_Icon_3"
                         data-toggle="tooltip"
                         title="Voir les détails du film [@item.Id]" />
                </a> &nbsp;

                <a href='@Url.Action("Editer", "PlayersMove", new { id = item.Id })' style="text-decoration:none">
                    <img src='@Url.Content("~/Images/UI/Edit.png")'
                         alt="Editer" class="CMD_Icon_3"
                         data-toggle="tooltip"
                         title="Éditer le Move [@item.Id]" />
                </a> &nbsp;
                                
                <a href='@Url.Action("Effacer", "PlayersMove", new { id = item.Id })' style="text-decoration:none">
                    <img src='@Url.Content("~/Images/UI/Delete.png")'
                         alt="Delete" class="CMD_Icon_3"
                         onclick="BBConfirm('Effacer le move [@item.Id]?', '@Url.Action("Effacer", "PlayersMove", new { id = item.Id })')"
                         data-toggle="tooltip"
                         title="Effacer le Move [@item.Id]" />
                 </a>&nbsp;
            </td>
        </tr>
    }

</table>
