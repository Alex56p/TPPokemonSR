@model IEnumerable<PokemonSRSite.Move>

<h2>Moves</h2>

<p>
    <a href='@Url.Action("Ajouter", "Moves")' style="text-decoration:none">
        <img src='@Url.Content("~/Images/UI/Add.png")'
             alt="Ajouter" class="CMD_Icon_3"
             data-toggle="tooltip"
             title="Ajouter un Move" />
    </a>
</p>

<table class="table">
    <tr>

        <th>
            <a href='@Url.Action("Sort", "Moves",new {sortBy = "Name"})' style="text-decoration:none">
                <img src='@Url.Content("~/Images/UI/Sort.png")'
                     alt="Sort" class="CMD_Icon_4"
                     data-toggle="tooltip"
                     title="Trier par Nom" />
            </a>

            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            <a href='@Url.Action("Sort", "Moves",new {sortBy = "Type"})' style="text-decoration:none">
                <img src='@Url.Content("~/Images/UI/Sort.png")'
                     alt="Sort" class="CMD_Icon_4"
                     data-toggle="tooltip"
                     title="Trier par Type" />
            </a>
             
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            <a href='@Url.Action("Sort", "Moves", new { sortBy = "Damage" })' style="text-decoration:none">
                <img src='@Url.Content("~/Images/UI/Sort.png")'
                     alt="Sort" class="CMD_Icon_4"
                     data-toggle="tooltip"
                     title="Trier par Damage" />
            </a>

           @Html.DisplayNameFor(model => model.Damage)
        </th>
        <th>
            <a href='@Url.Action("Sort", "Moves", new { sortBy = "Accuracy" })' style="text-decoration:none">
                <img src='@Url.Content("~/Images/UI/Sort.png")'
                     alt="Sort" class="CMD_Icon_4"
                     data-toggle="tooltip"
                     title="Trier par Accuracy" />
            </a>

           @Html.DisplayNameFor(model => model.Accuracy)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Damage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Accuracy)
            </td>
            <td>
                <a href='@Url.Action("Details", "Moves", new { id = item.Id })' style="text-decoration:none">
                    <img src='@Url.Content("~/Images/UI/Details.png")'
                         alt="Détails" class="CMD_Icon_3"
                         data-toggle="tooltip"
                         title="Voir les détails du film [@item.Name]" />
                </a> &nbsp;

                <a href='@Url.Action("Editer", "Moves", new { id = item.Id })' style="text-decoration:none">
                    <img src='@Url.Content("~/Images/UI/Edit.png")'
                         alt="Editer" class="CMD_Icon_3"
                         data-toggle="tooltip"
                         title="Éditer le Move [@item.Name]" />
                </a> &nbsp;
                                
                <a href='@Url.Action("Effacer", "Moves", new { id = item.Id })' style="text-decoration:none">
                    <img src='@Url.Content("~/Images/UI/Delete.png")'
                         alt="Delete" class="CMD_Icon_3"
                         onclick="BBConfirm('Effacer le film [@item.Name.Replace(" '", @"\' ")]?', '@Url.Action("Effacer", "Moves", new { id = item.Id })')"
                         data-toggle="tooltip"
                         title="Effacer le Move [@item.Name]" />
                 </a>&nbsp;
            </td>
        </tr>
    }

</table>
